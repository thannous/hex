{
  "name": "hex-ops",
  "version": "0.1.0",
  "private": true,
  "description": "HEX Ops - SaaS B2B automatisant le chiffrage CVC/Plomberie",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.9.2",
  "scripts": {
    "dev": "turbo run dev --parallel --filter=!@hex/mobile",
    "dev:all": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
